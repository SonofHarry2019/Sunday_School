<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp"
        android:text="Prayer Time"
        android:textAlignment="center"
        android:textColor="#009688"
        android:textSize="55sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="55dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="Adhan         Iqamah"
        android:layout_marginTop="45dp"
        android:textColor="#009688"
        android:textSize="30sp"
        android:layout_below="@+id/textView3"/>

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="Fajr: 4:52am         5:00am"
        android:layout_marginTop="45dp"
        android:textColor="#009688"
        android:textSize="30sp"
        android:layout_below="@+id/textview"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="Dhuhr: 1:06pm         1:45pm"
        android:layout_marginTop="45dp"
        android:textColor="#009688"
        android:textSize="30sp"
        android:layout_below="@+id/textview1"/>

    <TextView
        android:id="@+id/textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="Asr: 4:44pm         5:30pm"
        android:layout_marginTop="45dp"
        android:textColor="#009688"
        android:textSize="30sp"
        android:layout_below="@+id/textView2"/>

    <TextView
        android:id="@+id/textview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="Maghrib: 8:04pm       8:09pm"
        android:layout_marginTop="45dp"
        android:textColor="#009688"
        android:textSize="30sp"
        android:layout_below="@+id/textview4"/>

    <TextView
        android:id="@+id/textview6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="Isha: 9:21pm         9:30pm"
        android:layout_marginTop="45dp"
        android:textColor="#009688"
        android:textSize="30sp"
        android:layout_below="@+id/textview5"/>

</RelativeLayout>